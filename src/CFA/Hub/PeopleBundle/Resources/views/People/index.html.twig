{% extends 'CFAHubSharedBundle:Shared:layout.html.twig' %}

{% block page_title %}
    People
{% endblock %}

{% block content %}
    {# management #}
    {% for person in management %}
        <div class="col-md-4 col-sm-6 col-xs-12">
            <a href="{{ path('cfa_hub_people_show', {'person': person.id}) }}" style="text-decoration: none;">
                <center>
                    <div class="panel panel-default" style="margin-top: 75px;">
                        <div class="panel-body">
                            <div style="display: block;
                            width: 150px;
                            height: 150px;
                            background: #E6E7ED;
                            border-radius: 75px;
                            -webkit-border-radius: 75px;
                            background-image: url(
                                {% if person.imageLocation != null %}
                                    {{ asset(person.imageLocation) }}
                                {% else %}
                                    {{ person.imageLocation }}
                                {% endif %}
                            );
                            background-position:50% 50%;
                            background-repeat:no-repeat;
                            background-size: cover;
                            margin-top: -75px;
                            box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);">
                            </div>
                            <h4 class="text-primary">
                                {{ person }}
                                <br>
                                <small>{{ person.position }}</small>
                            </h4>
                            <p class="text-muted">
                                {{ icon('phone-square') }}
                                {{ person.phone }}
                                <br>
                                {{ icon('envelope-square') }}
                                {{ person.email }}
                            </p>
                        </div>
                    </div>
                </center>
            </a>
        </div>
    {% endfor %}

    {# team members #}
    {% for person in team_members %}
        <div class="col-md-4 col-sm-6 col-xs-12">
            <a href="{{ path('cfa_hub_people_show', {'person': person.id}) }}" style="text-decoration: none;">
