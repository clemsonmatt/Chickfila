                            </div>
                            <h4 class="text-primary">
                                {{ person }}
                                <br>
                                <small>{{ person.position }}</small>
                            </h4>
                            <p class="text-muted">
                                {{ icon('phone-square') }}
                                {{ person.phone }}
                                <br>
                                {{ icon('envelope-square') }}
                                {{ person.email }}
                            </p>
                        </div>
                    </div>
                </center>
            </a>
        </div>
    {% endfor %}
{% endblock %}
