<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" type="image/ico" href="{{ asset('bundles/cfahubshared/images/favicon.ico') }}"/>

        <title>{% block title %}CFA Hub Login{% endblock %}</title>

        {% block stylesheets %}
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
            {% stylesheets
                '@CFAHubSecurityBundle/Resources/public/css/bootstrap.css'
                '@CFAHubSecurityBundle/Resources/public/css/custom.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>

    <body style="background-color: #F5F4F1">
        <div id="">
            <div id="">
                <div class="">
                    <div class="col-sm-12">
                        {% set flashTypes = [ 'info', 'notice', 'warning', 'error', 'success'] %}
                        {% set flashTypeMap = {
                            'info' : 'info',
                            'notice' : 'info',
                            'warning' : 'warning',
                            'error' : 'danger',
                            'success' : 'success',
                        } %}
                        {% for flashType in flashTypes %}
                            {% for flashMessage in app.session.flashbag.get(flashType) %}
                                <div class="hidden-print alert-cfa alert-cfa-{{ flashTypeMap[flashType] }}">
                                    <strong>
                                        {{ flashMessage|raw }}
                                    </strong>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>

                {% block content %}
                {% endblock %}
            </div>
        </div>

        {% block javascripts %}

            {% javascripts
                'bundles/cfahubshared/js/jquery-1.11.1.min.js'
                'bundles/cfahubshared/js/lib/bootstrap/bootstrap.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

        {% endblock %}
    </body>
</html>

