{% extends 'CFAEventRegisterBundle:Shared:layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block page_title_header %}
    Manage
{% endblock %}

{% block page_breadcrumb %}
    <ol class="breadcrumb-custom">
        <li>
            <a href="{{ path('cfa_event_manage_index') }}">
                Manage Event Register
            </a>
        </li>
        {% if add_edit == "Edit" %}
            <li>
               <a href="{{ path('cfa_event_manage_event_show', {'event': event.id}) }}">
                   Event Details
               </a>
            </li>
        {% endif %}
        <li class="active">
            {{ add_edit }} Event
        </li>
    </ol>
{% endblock %}

{% block content %}
    <div class="panel panel-cfa">
        <div class="panel-body">
            <legend><h3>{{ add_edit }} Event</h3></legend>
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-success pull-right">
                    Save Event
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
